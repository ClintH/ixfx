{
	"name": "@ixfx/visual",
	"version": "0.53.1",
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"files": [
		"dist/",
		"bundle/"
	],
	"scripts": {
		"package-bundle": "tsdown",
		"clean": "rm -rf dist && rm -rf bundle"
	},
	"dependencies": {
		"@ixfx/arrays": "workspace:^",
		"@ixfx/collections": "workspace:^",
		"@ixfx/core": "workspace:^",
		"@ixfx/dom": "workspace:^",
		"@ixfx/events": "workspace:^",
		"@ixfx/flow": "workspace:^",
		"@ixfx/geometry": "workspace:^",
		"@ixfx/guards": "workspace:^",
		"@ixfx/numbers": "workspace:^",
		"@ixfx/random": "workspace:^",
		"colorizr": "3.0.7"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./colour": {
			"types": "./src/colour/index.ts",
			"import": "./src/colour/index.ts"
		},
		"./drawing": {
			"types": "./src/drawing.ts",
