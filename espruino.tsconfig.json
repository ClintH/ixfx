{
  "compilerOptions": {
    "outDir": "./espruino",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@types/web-bluetooth",
      "@types/w3c-web-serial"
    ],
    "target": "es4",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src"
  ]
}