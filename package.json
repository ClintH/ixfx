{
	"license": "MIT",
	"name": "ixfx",
	"scripts": {
		"build": "tsc --build",
		"clean": "pnpm run --parallel clean",
		"rebuild": "pnpm run clean && pnpm run build",
		"test": "vitest --api",
		"coverage": "vitest run --coverage --coverage.exclude=**/types.ts --coverage.exclude=**/node_modules/** --coverage.exclude=**/dist/** --coverage.exclude=bundle/** --coverage.exclude=node_modules/** --coverage.exclude=**/bundle/** --coverage.exclude=**/__tests__/** --coverage.exclude=**/*.config.ts --coverage.exclude=**/*.config.mjs --coverage.exclude=**/*.package.ts --coverage.exclude=tests/** --coverage.exclude=packages/ui/** --coverage.exclude=packages/io/** --coverage.exclude=packages/dom/** --coverage.exclude=src/** --coverage.reportsDirectory ./tests/coverage",
		"publint": "pnpm --recursive --filter=\"./packages/**\" exec publint",
		"docs": "typedoc --out ../api-docs/docs",
		"pkg-strip": "node --experimental-strip-types package-rewrite.ts strip",
		"pkg-add": "node --experimental-strip-types package-rewrite.ts add",
		"demos-bundle-core": "pnpm --filter \"./packages/bundle/\" run package-bundle",
		"demos-bundle": "pnpm run pkg-strip && pnpm run demos-bundle-core && pnpm run pkg-add",
		"demos-copy": "del --force ../demos/ixfx && copyfiles -u 3 ./packages/bundle/bundle/**/* ../demos/ixfx",
		"demos": "pnpm run demos-bundle && pnpm run demos-copy",
		"packages-bundle-core": "pnpm run --parallel package-bundle",
		"packages-bundle": "pnpm run pkg-strip && pnpm run packages-bundle-core && pnpm run pkg-add",
		"release-prep": "pnpm run rebuild && pnpm run packages-bundle && pnpm run demos-copy && pnpm changeset",
		"release": "pnpm changeset version && pnpm publish --recursive --no-git-checks"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@eslint/js": "9.39.2",
		"@rslib/core": "0.19.1",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@types/node": "^25.0.3",
		"@vitest/coverage-v8": "4.0.16",
		"copyfiles": "2.4.1",
		"del-cli": "7.0.0",
		"eslint": "9.39.2",
		"eslint-plugin-unicorn": "62.0.0",
		"globals": "17.0.0",
		"publint": "^0.3.16",
		"tsdown": "0.19.0-beta.5",
		"typedoc": "0.28.15",
		"typedoc-plugin-markdown": "4.9.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.52.0",
		"vite": "7.3.1",
		"vitest": "4.0.16"
	},
	"packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
	"type": "module"
}