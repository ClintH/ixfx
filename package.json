{
  "name": "ixfx",
  "version": "0.0.2",
  "description": "A framework for programming interactivity",
  "homepage": "https://github.com/clinth/ixfx/",
  "keywords": [
    "interactivity"
  ],
  "author": "Clint Heyer",
  "license": "MIT",
  "repository": {
    "url": "git@github.com:clinth/ixfx.git"
  },
  "module": "./dist/bundle.js",
  "exports": {
    ".": "./dist/bundle.js",
    "./lib/*": "./dist/*.js"
  },
  "browsersList": [
    ">2% and last 2 versions and not ie 6-11"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "develop": "tsc --watch",
    "clean": "rimraf dist && rimraf etc",
    "run": "tsc && node -r source-map-support/register",
    "bundle": "tsup",
    "bundle:watch": "tsup --watch",
    "prepublish": "npm run clean && npm run pkg",
    "pkg": "npm run bundle",
    "pkg:typings": "tsc --project config/tsconfig.pkg.json",
    "copyForDemos": "copyfiles --up 1 ./dist/* ../ixfx-demos/ixfx/",
    "docs": "typedoc --customCss ./config/custom.css --options ./config/typedoc.json && npm run copyIcons",
    "docs:watch": "typedoc --customCss ./config/custom.css --watch --options ./config/typedoc.json",
    "copyIcons": "copyfiles --up 1 ./config/*.png ./docs/assets/",
    "lint": "eslint src/**",
    "test:coverage": "jest --collectCoverage --config config/jest.config.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config config/jest.config.js"
  },
  "legacyScripts": {
    "docs:grok": "grok ./etc/buildForApiDocs/ --config ./config/grok.config.cjs --outDir ./docs/api",
    "legacyesbundle": "esbuild src/index.ts --sourcemap --format=esm --outfile=dist/ixfx.js --bundle",
    "legacyesdevelop": "esbuild src/index.ts --sourcemap --format=esm --outfile=dist/index.js --bundle --watch",
    "legacydev:demos": "snowpack dev --config ./config/snowpack-demos.config.js",
    "legacydev:demosAlt": "snowpack dev --config ./config/snowpack-demosAlt.config.js",
    "legacybuild:demos": "snowpack build --config ./config/snowpack-demos.config.js"
  },
  "devDependencies": {
    "@svgdotjs/svg.js": "^3.1.2",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "color2k": "^1.2.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.17",
    "eslint": "^8.8.0",
    "eslint-plugin-functional": "^4.1.1",
    "fp-ts": "^2.11.8",
    "jest": "^27.4.7",
    "jest-extended": "^2.0.0",
    "live-server": "^1.2.1",
    "npm-check-updates": "^12.2.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.3",
    "tsup": "^5.11.13",
    "tsutils": "^3.21.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.6.0-dev.20220109"
  },
  "dependencies": {
    "@types/bezier-js": "^4.1.0",
    "bezier-js": "^5.1.0",
    "lit": "^2.1.2",
    "rxjs": "^7.5.2"
  },
  "engines": {
    "node": ">=17.0.1"
  },
  "eslintIgnore": [
    "./dist/**/*"
  ]
}