{
  "name": "ixfx",
  "version": "0.0.2",
  "description": "A framework for programming interactivity",
  "homepage": "https://github.com/clinth/ix/",
  "keywords": [
    "interactivity"
  ],
  "author": "Clint Heyer",
  "license": "MIT",
  "repository": {
    "url": "git@github.com:clinth/ix.git"
  },
  "module": "dist/index.js",
  "exports": "./dist/index.js",
  "browsersList": [
    ">2% and last 2 versions and not ie 6-11"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "develop": "tsc --watch",
    "clean": "rimraf dist && rimraf etc",
    "run": "tsc && node -r source-map-support/register",
    "bundle": "tsup",
    "bundle:watch": "tsup --watch",
    "_bundle:geometry": "tsup ./src/geometry/index.ts --out-dir=./dist/geometry",
    "prepublish": "npm run clean && npm run pkg",
    "pkg": "npm run bundle",
    "pkg:typings": "tsc --project config/tsconfig.pkg.json",
    "copyForDemos": "copyfiles ./dist/* ../ixfx-demos/node_modules/ixfx/",
    "docs:build": "grok ./etc/build/index.d.ts --config ./config/grok.config.cjs --outDir ./etc/docs",
    "lint": "eslint src/**",
    "test:coverage": "jest --collectCoverage --config config/jest.config.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config config/jest.config.js"
  },
  "legacyScripts": {
    "legacyesbundle": "esbuild src/index.ts --sourcemap --format=esm --outfile=dist/ixfx.js --bundle",
    "legacyesdevelop": "esbuild src/index.ts --sourcemap --format=esm --outfile=dist/index.js --bundle --watch",
    "legacydev:demos": "snowpack dev --config ./config/snowpack-demos.config.js",
    "legacydev:demosAlt": "snowpack dev --config ./config/snowpack-demosAlt.config.js",
    "legacybuild:demos": "snowpack build --config ./config/snowpack-demos.config.js"
  },
  "devDependencies": {
    "@svgdotjs/svg.js": "^3.1.1",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.1",
    "@ui-js/grok": "^1.3.0",
    "color2k": "^1.2.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-plugin-functional": "^4.1.1",
    "fp-ts": "^2.11.7",
    "jest": "^27.4.7",
    "jest-extended": "^1.2.0",
    "live-server": "^1.2.1",
    "npm-check-updates": "^12.1.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.2",
    "tsup": "^5.11.11",
    "tsutils": "^3.21.0",
    "typedoc": "^0.22.11",
    "typedoc-plugin-markdown": "^3.11.12",
    "typescript": "^4.6.0-dev.20220109"
  },
  "dependencies": {
    "@types/bezier-js": "^4.1.0",
    "bezier-js": "^4.1.1",
    "lit": "^2.1.2",
    "rxjs": "^7.5.2"
  },
  "engines": {
    "node": ">=17.0.1"
  }
}