{
  "name": "ixfx",
  "version": "0.0.15",
  "description": "A framework for programming interactivity",
  "homepage": "https://github.com/clinth/ixfx/",
  "keywords": [
    "interactivity"
  ],
  "author": "Clint Heyer",
  "license": "MIT",
  "repository": {
    "url": "git@github.com:clinth/ixfx.git"
  },
  "module": "./dist/bundle.js",
  "exports": {
    ".": "./dist/bundle.js",
    "./lib/*": "./dist/*.js"
  },
  "browsersList": [
    ">2% and last 2 versions and not ie 6-11"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc",
    "develop_": "tsc --watch",
    "dev": "tsup --watch",
    "clean": "rimraf dist && rimraf etc && rimraf docs",
    "run": "tsc && node -r source-map-support/register",
    "build": "tsup --sourcemap && npm run typings",
    "prepublishOnly": "npm run clean && npm run build",
    "typings": "tsc --project config/tsconfig.pkg.json",
    "typings:watch": "tsc --watch --project config/tsconfig.pkg.json",
    "demos": "npm run build && npm run demos:copy",
    "demos:watch": "concurrently \"npm run dev\"  \"npm run typings:watch\"",
    "demos:copy": "copyfiles --up 1 ./dist/* ../ixfx-demos/ixfx/",
    "docs": "typedoc --customCss ./config/custom.css --options ./config/typedoc.json && npm run docs:copyIcons",
    "docs:watch": "typedoc --customCss ./config/custom.css --watch --options ./config/typedoc.json",
    "docs:copyIcons": "copyfiles --up 1 ./config/*.png ./docs/assets/",
    "lint": "eslint src/**",
    "test:coverage": "jest --collectCoverage --config config/jest.config.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config config/jest.config.js"
  },
  "devDependencies": {
    "@svgdotjs/svg.js": "^3.1.2",
    "@types/d3-color": "^3.0.2",
    "@types/d3-interpolate": "^3.0.1",
    "@types/jest": "^27.4.0",
    "@types/w3c-web-serial": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "d3-interpolate": "^3.0.1",
    "esbuild": "^0.14.25",
    "eslint": "^8.11.0",
    "eslint-plugin-functional": "^4.1.1",
    "fp-ts": "^2.11.8",
    "jest": "^27.4.7",
    "jest-extended": "^2.0.0",
    "live-server": "^1.2.1",
    "npm-check-updates": "^12.2.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.3",
    "tsup": "^5.12.1",
    "tsutils": "^3.21.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@types/bezier-js": "^4.1.0",
    "@types/web-bluetooth": "^0.0.14",
    "bezier-js": "^5.1.0",
    "d3-color": "^3.0.1",
    "lit": "^2.2.0",
    "rxjs": "^7.5.5"
  },
  "engines": {
    "node": ">=17.0.1"
  },
  "eslintIgnore": [
    "./dist/**/*"
  ]
}