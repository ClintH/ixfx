{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:functional/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "project": [
            "./tsconfig.json",
            "./www/tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint",
        "functional"
    ],
    "rules": {
        "functional/prefer-readonly-type": [
            "error",
            {
                "allowLocalMutation": true,
                "ignorePattern": "^_",
                "ignoreClass": true
            }
        ],
        "functional/immutable-data": [
            "error",
            {
                "ignorePattern": "^_",
                "ignoreClass": true
            }
        ],
        "functional/functional-parameters": [
            "off"
        ],
        "functional/no-this-expression": [
            "off"
        ],
        "functional/no-conditional-statement": [
            "off"
        ],
        "functional/no-throw-statement": [
            "off"
        ],
        "functional/no-class": [
            "off"
        ],
        "functional/no-expression-statement": [
            "off"
        ],
        "functional/no-return-void": [
            "off"
        ],
        "no-undef-init": [
            "error"
        ],
        "no-throw-literal": [
            "error"
        ],
        "@typescript-eslint/no-useless-constructor": "error",
        "@typescript-eslint/no-inferrable-types": [
            "off",
            "ignore-params"
        ],
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/ban-ts-comment": [
            "off"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ],
        "func-call-spacing": [
            "error",
            "never"
        ],
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ],
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": [
                    "variableLike",
                    "function"
                ],
                "format": [
                    "camelCase"
                ]
            },
            {
                "selector": [
                    "parameter"
                ],
                "leadingUnderscore": "allow",
                "format": [
                    "camelCase"
                ]
            },
            {
                "selector": [
                    "typeLike",
                    "class"
                ],
                "format": [
                    "PascalCase"
                ]
            },
            {
                "selector": [
                    "variable"
                ],
                "modifiers": [
                    "const",
                    "exported"
                ],
                "types": [
                    "boolean"
                ],
                "format": [
                    "PascalCase"
                ],
                "prefix": [
                    "is",
                    "should",
                    "has",
                    "can",
                    "did",
                    "will"
                ]
            }
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "eqeqeq": "error",
        "no-var": "error",
        "func-style": [
            "error",
            "expression"
        ],
        "prefer-arrow-callback": "error",
        "no-confusing-arrow": [
            "error",
            {
                "allowParens": true
            }
        ],
        "no-useless-concat": "error",
        "no-useless-constructor": "off",
        "no-useless-return": "error",
        "prefer-const": "error",
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "space-before-blocks": "error",
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "implicit-arrow-linebreak": [
            "error",
            "beside"
        ],
        "function-call-argument-newline": [
            "error",
            "consistent"
        ],
        "function-paren-newline": [
            "error",
            "consistent"
        ],
        "no-multiple-empty-lines": "error",
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "rest-spread-spacing": [
            "error",
            "never"
        ],
        "block-spacing": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    }
}