import esbuild from 'esbuild';
import htmlPlugin from '@chialab/esbuild-plugin-html';

let watch = (process.argv.includes('--watch'));
if (watch) console.log('buildTests watching');
await esbuild.build({
  entryPoints: ['tests/'],
  outdir: 'build-tests',
  target: "es2020",
  watch: watch,
  plugins: [
    htmlPlugin({
      // scriptsTarget: 'es6',
      // modulesTarget: 'es2020',
    }),
  ],
});