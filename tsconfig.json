{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable",  "ESNext.AsyncIterable", "ESNext.Iterator"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"checkJs": true,
		"incremental": false,
		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noImplicitAny": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true
	},
	"files": [],
