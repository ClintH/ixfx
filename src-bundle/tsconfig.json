{

	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2024",
		"moduleResolution": "bundler",
		"lib": ["ESNext", "DOM", "DOM.Iterable",  "ESNext.AsyncIterable", "ESNext.Iterator"],
		"module": "ESNext",
		"rootDir": ".",
		"paths": {
			"@ixfx/arrays":["../packages/arrays/dist/src"],
			"@ixfx/collections":["../packages/collections/dist/src"],
			"@ixfx/core":["../packages/core/dist/src"],
			"@ixfx/core/*":["../packages/core/dist/src/*"],
			"@ixfx/debug":["../packages/debug/dist/src"],
			"@ixfx/dom":["../packages/dom/dist/src"],
			"@ixfx/events":["../packages/events/dist/src"],
			"@ixfx/flow":["../packages/flow/dist/src"],
			"@ixfx/flow/*":["../packages/flow/dist/src/*"],
			"@ixfx/geometry":["../packages/geometry/dist/src"],
			"@ixfx/guards":["../packages/guards/dist/src"],
			"@ixfx/iterables":["../packages/iterables/dist/src"],
			"@ixfx/modulation":["../packages/modulation/dist/src"],
			"@ixfx/modulation/*":["../packages/modulation/dist/src/*"],
			"@ixfx/numbers":["../packages/numbers/dist/src"],
			"@ixfx/process":["../packages/process/dist/src"],
			"@ixfx/random":["../packages/random/dist/src"],
			"@ixfx/rx":["../packages/rx/dist/src"],
			"@ixfx/trackers":["../packages/trackers/dist/src"],
			"@ixfx/ui":["../packages/ui/dist/src"],
			"@ixfx/visual":["../packages/visual/dist/src"],
			"@ixfx/visual/*":["../packages/visual/dist/src/*"],

			// "@ixfx/geometry/*":["../packages/arrays/dist/src/*"],
			// "colorjs": ["../packages/visual/lib/colorjs/index.js"]
		},
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"checkJs": true,
		"incremental": false,
		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noImplicitAny": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src/**/*", "__testsx__/**/*"],
	
}
